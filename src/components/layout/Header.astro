---
// Importing necessary components
import {
    ChatText,
    Heart,
    ShoppingCart,
    User,
    FileSearch,
    MagnifyingGlass,
} from "@phosphor-icons/react";
---

<div class="container">
    <nav>
        <div class="nav-layout">
            <!-- Logo and hamburger for mobile -->
            <div id="logo-container">
                <div class="hamburger-menu">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
                <div>
                    <img
                        src="/logo-colored.png"
                        alt="logo"
                        class="logo-image"
                    />
                </div>
            </div>

            <div id="search-box">
                <MagnifyingGlass size={32} weight="bold" />
                <input type="text" class="search-input" placeholder="Search" />
            </div>
            <div>
                <div id="icon-container">
                    <div><User size={32} color="#073a61" weight="bold" /></div>
                    <div><Heart size={32} color="#073a61" weight="bold" /></div>
                    <div>
                        <ShoppingCart size={32} color="#073a61" weight="bold" />
                    </div>
                </div>
            </div>
        </div>
        <div id="search-box">
            <MagnifyingGlass size={32} weight="bold" />
            <input type="text" class="search-input" placeholder="Search" />
        </div>
    </nav>
    <style>
        /* Logo styles */
        #logo-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
        }

        /* Hamburger menu styles */
        .hamburger-menu div {
            width: 30px;
            height: 5px;
            background-color: #073a61;
            margin: 6px 0;
        }

        /* Navigation layout styles */
        .nav-layout {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Search box styles */
        #search-box {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 100%;
            border: 1px solid var(--gray-500);
            border-radius: 5px;
            padding: 3px 10px;
        }
        #search-box:focus-within {
            box-shadow: 0 0 5px var(--primary);
        }

        /* Search input styles */
        .search-input {
            flex-grow: 1;
            margin-right: 10px;
            max-width: 100%;
            height: 32px;
            border-radius: 5px;
            border: none;
            outline: none;
        }

        /* Icon container styles */
        #icon-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 10px;
        }

        /* Media queries */
        @media (max-width: 768px) {
            .hamburger-menu {
                cursor: pointer;
            }
            .nav-layout #search-box {
                display: none;
            }
            nav #search-box {
                display: flex;
                margin-top: 12px;
            }
        }

        @media (min-width: 769px) {
            .hamburger-menu {
                display: none;
            }

            .nav-layout #search-box {
                display: flex;
                flex-grow: 1;
                margin: 0px 10px 0px 0px;
            }
            nav #search-box {
                display: none;
            }
        }
    </style>
</div>
